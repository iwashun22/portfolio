---
import BackgroundImage from '@images/home-bg-img.jpeg';
import Profile from './Profile.astro';
import Image from 'astro/components/Image.astro';
---

<section id="home-top">
  <div class="image-bg-container">
    <Image src={BackgroundImage} alt="something" loading="eager"/>
  </div>
  <div class="profile-container">
    <Profile/>
  </div>
</section>

<style lang="scss">
  @use '@utils/mixins' as *;
  $bg-color: #F0FFFF;

  #home-top {
    height: 100vh;
    height: 100dvh;
    width: 100vw;
    background-color: $bg-color;
    display: flex;
    flex-direction: row;

    .image-bg-container {
      @include image-wrapper($brightness: 0.7) {
        width: 60%;
        height: 100%;
        clip-path: polygon(0% 0%, 100% 0, 85% 50%, 100% 100%, 0% 100%);
      }
    }

    .profile-container {
      flex: 1;
      display: flex;
      align-items: center;
      padding-left: 60px;
    }
  }

  @media screen and (max-width: 750px) {
    #home-top {
      flex-direction: column-reverse;
      background-color: #bfebff;
      .image-bg-container {
        width: 100%;
        height: 70%;
        clip-path: polygon(0% 0%, 50% 25%, 100% 0%, 100% 100%, 0% 100%);
      }

      .profile-container {
        padding-left: 0;
      }
    }
  }
</style>